{
  "name": "enable-absolute-paths",
  "version": "0.0.1",
  "description": "Enable absolute paths in a TypeScript project",
  "keywords": [
    "absolute paths"
  ],
  "license": "MIT",
  "author": "sajmoni",
  "type": "module",
  "bin": "dist/index.js",
