{
  "name": "enable-absolute-paths",
  "version": "0.1.2",
  "description": "Enable absolute paths in a TypeScript project",
  "keywords": [
    "absolute paths"
  ],
  "license": "MIT",
  "author": "sajmoni",
  "type": "module",
  "bin": "dist/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "release": "npm run build && np --no-tests",
    "test": "npm run build && chmod +x dist/index.js && vitest"
  },
  "prettier": "prettier-config-one",
  "dependencies": {
    "typescript": "5.7.3",
    "write-pretty-file": "0.2.0"
  },
  "devDependencies": {
    "@types/node": "20.17.14",
    "execa": "9.5.2",
    "get-bin-path": "11.0.0",
    "np": "10.1.0",
    "prettier": "3.4.2",
    "prettier-config-one": "0.2.1",
    "tempy": "3.1.0",
    "tsconfig-one": "0.0.9",
    "vitest": "3.0.2"
  },
  "engines": {
    "node": ">=22"
  }
}
