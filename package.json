  },
  "devDependencies": {
    "@types/node": "20.9.2",
    "execa": "8.0.1",
    "get-bin-path": "11.0.0",
    "np": "8.0.4",
    "prettier": "3.1.0",
    "prettier-config-one": "0.2.0",
    "tempy": "3.1.0",
    "tsconfig-one": "0.0.8",
    "typescript": "5.2.2",
    "vitest": "0.34.6"
  },
  "engines": {
    "node": ">=20"
